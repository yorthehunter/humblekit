%nav.bg-black-trans-dark.pos-fix.pos-t.pos-l.pos-r{ role: "navigation" }
  .container.hide_ltsm
    %ul.list-inline.list-condensed.text-c
      %li.left= link_to '<span class="fa fa-home"></span>'.html_safe, page_path('index'), class:"btn btn-sm btn-link btn-link-dark light px2 text-l-xs round-none"
      = render "layouts/shared/nav_links"
      %li.right= link_to '<span class="fa fa-github"></span>'.html_safe, "http://www.github.com/yorthehunter/humblekit",
                      target:"_blank",
                      class:"btn btn-sm btn-link btn-link-dark light px2 text-l-xs round-none",
                      title:"Humble Kit on Github &nbsp;<sup class='fa fa-external-link'></sup>",
                      data: { toggle: "tooltip", placement: "bottom", html: "true" }

  .container.flex.hide_gtsm
    %ul.list-inline.m0.clearfix
      %ul.list-inline.list-condensed.text-c
        %li.left= link_to '<span class="fa fa-home"></span>'.html_safe, page_path('index'), class:"btn btn-sm btn-link btn-link-dark light px2 text-l-xs round-none"
        %li.right
          %a.btn.btn-sm.btn-link.btn-link-dark.light.px2.text-r-xs.round-none{ href: "#", data: { target: "#nav_mobile", toggle: "collapse" } }
            %span.fa.fa-bars

    #nav_mobile.container.flex.hide_gtsm.collapse
      %ul.list-inline.list-nav.list-condensed
        = render "layouts/shared/nav_links"
        %li.right= link_to 'Humble Kit on GitHub <sup class="fa fa-external-link"></sup>'.html_safe, "http://www.github.com/yorthehunter/humblekit",
                        target:"_blank",
                        class:"btn btn-sm btn-link btn-link-dark light px1 text-l-xs round-none"