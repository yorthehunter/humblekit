%article.container
  %header
    %h1 Forms Tests

  = simple_form_for :user do |f|
    = f.input :username,     as: :fake
    = f.input :password,     as: :fake
    = f.input :description,  as: :text
    = f.input :acceptable,   as: :radio_buttons, item_wrapper_class: "mr1"
    = f.input :are_you_sure, as: :check_boxes, item_wrapper_class: "mr1"
    = f.button :submit,      as: :fake

  = render "pages/forms/default"

  = render "pages/forms/stacked"

  = render "pages/forms/aligned"

  = render "pages/forms/grouped"

  = render "pages/forms/sizing"

  = render "pages/forms/states"

  %h2 Checkboxes and Radios
  %form
    %label
      %input{type: "checkbox", value: ""}/
      Here's option one.
    %label
      %input#optionsRadios1{checked: "checked", name: "optionsRadios", type: "radio", value: "option1"}/
      Here's a radio button. You can choose this one...
    %label
      %input#optionsRadios2{name: "optionsRadios", type: "radio", value: "option2"}/
      \...Or this one!
  %h2 Help text
  %form.form-stacked
    %fieldset
      %label Last Name
      %input{type: "text"}/
      %aside Block help text
  %h2 Buttons
  %form
    %a Anchor
    %button Button
    %input.btn.btn-primary{type: "submit", value: "Submit"}/
    %input.btn.btn-secondary{type: "button", value: "Input Button"}/
    %input.btn{type: "reset", value: "Reset"}/