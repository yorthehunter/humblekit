%section
  %header
    %h2 Multi-Column Form with Grids
  %form
    %fieldset
      %legend Legend
      .grid
        .g._1-3
          %label First Name
          %input{type: "text"}/
        .g._1-3
          %label Password
          %input{type: "password"}/
        .g._1-3
          %label E-Mail
          %input{required: "", type: "email"}/
        .g._1-3
          %label City
          %input{type: "text"}/
        .g._1-3
          %label State
          %select
            %option AL
            %option CA
            %option IL
            %option MD
            %option NY
      %label.pure-checkbox
        %input{type: "checkbox"}/
        I've read the terms and conditions
      %button.pure-button{type: "submit"} Submit
      %button.pure-button{type: "reset"} Reset

